<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOnAccent">

    <TextView
        android:id="@+id/estadoD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dispositivo desconocido"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-condensed-light"
        android:textSize="30dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnEnviarD"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginEnd="82dp"
        android:layout_marginRight="82dp"
        android:background="@drawable/buttonrec"
        android:text="Enviar datos"
        android:fontFamily="sans-serif-condensed-light"
        android:textSize="30dp"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/btnRecibirD"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDispensarAhora"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="82dp"
        android:layout_marginRight="82dp"
        android:background="@drawable/buttonrec"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Recibir datos"
        android:textColor="@color/colorWhite"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnDispensarAhora"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnEnviarD"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="82dp"
        android:background="@drawable/buttonrec"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Dispensar Ahora"
        android:textColor="@color/colorWhite"
        android:textSize="30dp" />

</RelativeLayout>